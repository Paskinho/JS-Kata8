function lovefunc(flower1, flower2){
  (flower1 % 2 === 0 && flower2 % 2 == 1) ?  true :
  (flower2 % 2 === 0 && flower1 % 2 == 1) ? true : 
  false
}


function lovefunc(flower1, flower2){
  if(flower1 % 2 == 0 && flower2 % 2 == 1){
    return true;
}
 if(flower1 % 2 == 1 && flower2 % 2 == 0){
   return true;
}
else{
    return false;
    }
}

самое короткое решение

function lovefunc(flower1, flower2){
  return flower1 % 2 !== flower2 % 2;
}
