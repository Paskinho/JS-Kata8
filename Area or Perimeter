const areaOrPerimeter = function(l , w) {
  return (l=w) ? l * w : l+l+w+w
};

Правильное моё решение 

const areaOrPerimeter = function(l , w) {
  return (l != w) ? (2 * l) + (2 * w): l * w
};


Самое популярное решение 

const areaOrPerimeter = function(l , w) {
  return l == w ? l*w : 2*(l + w)
};
